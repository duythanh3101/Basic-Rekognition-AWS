<Window x:Class="FPT_AI_TextToSpeech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FPT_AI_TextToSpeech"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <Label Content="Text" HorizontalContentAlignment="Center"/>
            <TextBox TextWrapping="Wrap" Width="300" Height="100" x:Name="ContentTextBox"></TextBox>
            <Label x:Name="NotifyLabel" Margin="10" HorizontalContentAlignment="Center" Foreground="Blue"/>
            <Button Content="Text to Speech" Click="Button_Click"
                    Width="100" Margin="10" Height="30"/>
            
        </StackPanel>
    </Grid>
</Window>
